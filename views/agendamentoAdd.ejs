<%- include('partials/header.ejs') %>
<body>
    <%- include('partials/navbar.ejs') %>
    <div class="container">
        <h1>Agendamento</h1>
        <form action="/agendamentos" method="POST">
            <div class="form-group">
                <label for="cliente">Cliente</label>
                <select class="form-control" id="clienteId" name="clienteId">
                    <option value="">Selecione um cliente</option>
                    <% clientes.forEach(cliente => { %>
                        <option value="<%= cliente.id %>"><%= cliente.nome %></option>
                    <% }) %>
                </select>

                <label for="barbeiroId">Barbeiro</label>
                <select class="form-control" id="barbeiroId" name="barbeiroId">
                    <option value="">Selecione um barbeiro</option>
                    <% barbeiros.forEach(barbeiro => { %>
                        <option value="<%= barbeiro.id %>"><%= barbeiro.nome %></option>
                    <% }) %>
                </select>

                <label for="data">Data</label>
                <input type="date" class="form-control" id="data" name="data">

                <label for="hora">Hora</label>
                <input type="time" class="form-control" id="hora" name="hora">

                <button type="submit" class="btn btn-primary mt-3">Agendar</button>
            </div>
        </form>
    </div>
</body>
<%- include('partials/footer.ejs') %>